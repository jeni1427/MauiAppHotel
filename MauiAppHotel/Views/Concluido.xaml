            </Frame>

            <Label Text="Densenvolvido:"
            FontFamily="ConcertOneRegular"
            FontSize="35"
            TextColor="Cyan" 
            HorizontalTextAlignment="Center"/>

            <Frame Padding="10" Margin="10">

                <Label Text="02/11/2024"
             FontFamily="RobotoSlab"
             FontSize="20"
